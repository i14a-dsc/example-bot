{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": "error",
    "no-eval": "error",
    "no-empty-function": "error",
    "no-inline-comments": "error",
    "no-multi-spaces": "error",
    "no-var": "error",
    "indent": ["error", "space"],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1, "maxBOF": 0 }],
    "max-nested-callbacks": ["error", { "max": 3 }],
    "space-in-parens": "error",
    "no-floating-decimal": "error",
    "no-trailing-spaces": "error",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "avoid"
      }
    ]
  }
}
